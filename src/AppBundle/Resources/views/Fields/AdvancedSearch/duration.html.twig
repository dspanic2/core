<div class="col-sm-4">
    <div class="form-group sp-search-group">
        <div class="row">
            <label class="col-sm-12 control-label">{{ attribute.frontendLabel|trans }}</label>
            <div class="col-sm-4">
                <div class="col-sm-8 sp-search-item" data-search_type="eq">
                    <input data-id="{{ attribute.id }}" type="text" name="{{ attribute.attributeCode|camelize }}"
                           class="form-control"
                           {% if value is defined and value is not empty %}value="{{ value }}"{% endif %}/>
                </div>
            </div>
        </div>
    </div>