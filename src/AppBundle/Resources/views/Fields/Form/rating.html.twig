<div class="form-group row {% if(attribute.frontendHidden) %}hidden{% endif %}"
     data-form-group="{{ attribute.attributeCode }}">
    <label class="col-sm-4 col-xs-4 control-label">{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('attribute_update_form', {'id': attribute.id}) }}">{{ attribute.frontendLabel|trans }}</a>{% else %}{{ attribute.frontendLabel|trans }}{% endif %}
        {% if attribute.note is not empty %}
            <span class="fa fa-question-circle sp-question-circle" data-content="{{ attribute.note|trans }}" rel="popover" data-html="true" data-placement="bottom"></span>
        {% endif %}
    </label>

    <div class="col-sm-8 col-xs-8">
        <div class="container">
            <div class="starrating formstar risingstar d-flex justify-content-center flex-row-reverse">
                <input type="radio" id="star5" name="{{ attribute.attributeCode }}" value="5" {% if value is not empty and value == 5 %}checked="checked"{% endif %}/><label for="star5" title="5 star"></label>
                <input type="radio" id="star4" name="{{ attribute.attributeCode }}" value="4" {% if value is not empty and value == 4 %}checked="checked"{% endif %}/><label for="star4" title="4 star"></label>
                <input type="radio" id="star3" name="{{ attribute.attributeCode }}" value="3" {% if value is not empty and value == 3 %}checked="checked"{% endif %}/><label for="star3" title="3 star"></label>
                <input type="radio" id="star2" name="{{ attribute.attributeCode }}" value="2" {% if value is not empty and value == 2 %}checked="checked"{% endif %}/><label for="star2" title="2 star"></label>
                <input type="radio" id="star1" name="{{ attribute.attributeCode }}" value="1" {% if value is not empty and value == 1 %}checked="checked"{% endif %}/><label for="star1" title="1 star"></label>
            </div>
        </div>
    </div>
</div>
