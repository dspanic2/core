<th data-col-name="{{ field }}"
    data-col-search="{% if is_document %}false{% else %}true{% endif %}"
    data-col-sort="{% if is_document %}false{% else %}true{% endif %}"
    data-search-type="bw"
    data-filter-type="text"
    {% if width is not empty %}data-width="{{ width }}"{% endif %} {% if show_filter == 0 or is_document %}data-col-filter="false"{% else %}data-col-filter="true"{% endif %}>
    <span {% if width is not empty %}style="width: {{ width }}px;"{% endif %}>{{ label|trans }}</span>
</th>
