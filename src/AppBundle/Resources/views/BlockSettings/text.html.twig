<div class="panel panel-midnightblue">
    <div class="panel-heading master-panel-heading">
        <h5>{% trans %}General information{% endtrans %}</h5>
    </div>
    <div class="panel-body collapse in">
        <fieldset class="form-group-wrapper">
            <div class="form-group row hidden">
                    <div class="col-sm-6">
                        <input type="hidden" name="id" class="form-control" {% if entity is not empty %}value="{{ entity.id }}"{% endif %}/>
                    </div>
                    <div class="col-sm-6">
                        <input type="hidden" name="content" class="form-control" {% if entity is not empty and entity.content is defined %}value="{{ entity.content }}"{% endif %}/>
                    </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 control-label">{% trans %}Title{% endtrans %}</label>
                <div class="col-sm-8">
                    <input type="text" name="title" class="form-control" data-fv-notempty="true" data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}" {% if entity is not empty %}value="{{ entity.title }}"{% endif %}/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 control-label">{% trans %}Type{% endtrans %}</label>
                <div class="col-sm-8">
                    <select {% if entity is not empty %}disabled="disabled"{% endif %}
                            name="type" data-fv-notempty="true"
                            data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}"
                            class="form-control">
                        <option selected="selected" value="text">{% trans %}text{% endtrans %}</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 control-label">{% trans %}Content{% endtrans %}</label>
                <div class="col-sm-12">
                    <textarea data-size="autosize" data-type="ckeditor" rows="4" placeholder="{% trans %}Set content{% endtrans %}" class="form-control form-control-textarea" name="content"></textarea>
                </div>
            </div>
        </fieldset>
    </div>
</div>
