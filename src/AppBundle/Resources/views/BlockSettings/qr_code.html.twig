<div class="col-sm-12 col-xs-12">
    <div class="panel panel-midnightblue">
        <div class="panel-heading master-panel-heading">
            <h5>{% trans %}General information{% endtrans %}</h5>
        </div>
        <div class="panel-body collapse in">
            <fieldset class="form-group-wrapper">
                <div class="form-group row hidden">
                    <div class="col-sm-6">
                        <input type="hidden" name="id" class="form-control"
                               {% if entity is not empty %}value="{{ entity.id }}"{% endif %}/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Title{% endtrans %}</label>
                    <div class="col-sm-6">
                        <input type="text" name="title" class="form-control"
                               data-fv-notempty="true"
                               data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}"
                               {% if entity is not empty %}value="{{ entity.title }}"{% endif %}/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Type{% endtrans %}</label>
                    <div class="col-sm-6">
                        <select {% if entity is not empty %}disabled="disabled"{% endif %}
                                name="type" data-fv-notempty="true"
                                data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}"
                                class="form-control">
                            <option selected="selected" value="qr_code">{% trans %}qr_code{% endtrans %}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Parent Entity Type{% endtrans %}</label>
                    <div class="col-sm-6">
                        <select name="parentEntityType" data-action="change_qr_code_parent" class="form-control" data-url="{{ path('get_lookup_attributes_by_entity_type') }}"
                                data-fv-notempty="true"
                                data-fv-notempty-message="{% trans %}Please select{% endtrans %}">
                            <option value=""
                                    {% if entity is empty %}selected="selected"{% endif %}>{% trans %}Please select{% endtrans %}</option>
                            {% for entity_type in entity_types %}
                                <option value="{{ entity_type.entityTypeCode }}" data-id="{{ entity_type.id }}"
                                        {% if parent_entity is not empty and parent_entity == entity_type.entityTypeCode %}selected="selected"{% endif %}>{{ entity_type.entityTypeCode }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Attribute to generate code from{% endtrans %}</label>
                    <div class="col-sm-6">
                        <select name="attributeForQrCode" class="form-control" data-fv-notempty="true" data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}">
                            <option value="">{% trans %}Please select{% endtrans %}</option>
                            {% if attributes is defined and attributes is not empty %}
                                {% for attribute in attributes %}
                                    <option {% if entity is not empty and attribute_id is defined and attribute_id is not empty %} {% if attribute_id == attribute.id %}selected="selected"{% endif %}{% endif %}
                                            value="{{ attribute.id }}">{{ attribute.attributeCode }}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Class{% endtrans %}</label>
                    <div class="col-sm-6">
                        <input type="text" name="class" class="form-control"
                               {% if entity is not empty %}value="{{ entity.class }}"{% endif %}/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 control-label">{% trans %}Data attributes{% endtrans %}</label>
                    <div class="col-sm-6">
                        <input type="text" name="dataAttributes" class="form-control"
                               {% if entity is not empty %}value="{{ entity.dataAttributes }}"{% endif %}/>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
