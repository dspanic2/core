<div class="sp-block sp-bubble_chart-wrapper {{ data.block.class }}" {% if data.block.dataAttributes is defined and data.block.dataAttributes is not empty %}{{ data.block.dataAttributes|raw }}{% endif %}>
    <div class="sp-block-inner">
        <div class="panel panel-midnightblue">
            <div class="panel-body collapse in">
                <div class="col-sm-12">
                    <div class="panel-heading main-panel-heading">
                        <h5>{{ data.block.title|trans }}{% if data.tooltip is defined and data.tooltip is not empty %}<span class="fa fa-question-circle sp-question-circle" data-content="{{ data.tooltip|trans }}" rel="popover" data-html="true" data-placement="bottom" data-original-title="" title=""></span>{% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="options">
                                    {{ include('AppBundle:Includes:manage_block_buttons.html.twig') }}
                                </div>
                            {% endif %}
                        </h5>
                    </div>
                </div>
                <div class="row sp-margin-bottom-15">
                    <div class="col-sm-12">
                        <div class="sp-bubble_chart text-center" data-type="bubble_chart" id="bubble_chart"
                             data-dataset="{{ data.dataset }}"
                        ></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

