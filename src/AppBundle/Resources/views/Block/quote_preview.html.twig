<div class="sp-block sp-quote_preview-wrapper {{ data.block.class }}" {% if data.block.dataAttributes is defined and data.block.dataAttributes is not empty %}{{ data.block.dataAttributes|raw }}{% endif %}>
    <div class="sp-block-inner">
        <div class="panel panel-midnightblue">
            <div class="panel-body collapse in">
                <div class="col-sm-12">
                    <div class="panel-heading main-panel-heading">
                        <h5>{{ data.block.title|trans }}
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="options">
                                    {{ include('AppBundle:Includes:manage_block_buttons.html.twig') }}
                                </div>
                            {% endif %}
                        </h5>
                    </div>
                </div>
                <div class="row sp-margin-bottom-15">
                    <div class="col-sm-12">
                        <div class="sp-block_preview"
                             data-type="quote_preview"
                             id="quote_preview_{{ data.block.id }}"
                             data-columns="{% if data.columns is defined %}{{ data.columns }}{% endif %}"
                             data-categories="{% if data.categories is defined %}{{ data.categories }}{% endif %}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

