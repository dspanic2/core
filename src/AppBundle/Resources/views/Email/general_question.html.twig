{% extends 'AppBundle:Email:base.html.twig' %}

{% block body %}
    <table width="100%" border="0" cellpadding="0"
           cellspacing="0">
        <tbody>
        <tr>
            <td valign="top" align="left">
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td align="left">
                            <div style="padding-left: 250px;min-height: 300px;">
                                {% trans into data.current_language %}Poštovani/a{% endtrans %},<br>
                                <br>
                                {% trans into data.current_language %}zahvaljujemo na Vašem interesu{% endtrans %}.<br>
                                {% trans into data.current_language %}Vaš upit je uspješno zaprimljen{% endtrans %}.&nbsp;<br>
                                <br>
                                <br>
                                {% trans into data.current_language %}Datum{% endtrans %}: {{ "now"|date("d.m.Y.") }}
                            </div>
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:16px;color:#4e515a;line-height:normal;font-weight:400;">
                            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                <tr>
                                    <td align="left" valign="top" width="400">
                                        <div>
                                            <strong>{% trans into data.current_language %}Informacije o korisniku{% endtrans %}:</strong><br><br>
                                            {{ data.quote.first_name }} {{ data.quote.last_name }}<br>
                                            <strong>{% trans into data.current_language %}E-mail{% endtrans %}</strong>: {{ data.quote.email }}<br>
                                            <strong>{% trans into data.current_language %}Telefon{% endtrans %}</strong>: {{ data.quote.phone }}<br>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="left" valign="top">
                                        <div>
                                            {% if data.product is not empty %}
                                                <strong>{% trans into data.current_language %}Informacije o proizvodu{% endtrans %}:</strong><br><br>
                                                <strong>{% trans into data.current_language %}Naziv{% endtrans %}</strong>: {{ get_entity_store_attribute(current_store_id,data.product,"name") }}<br>
                                                <strong>{% trans into data.current_language %}Šifra{% endtrans %}</strong>: {{ data.product.code }}<br>
                                                <br>
                                                <br>
                                            {% endif %}
                                            <strong>{% trans into data.current_language %}Upit{% endtrans %}:</strong><br><br>
                                            {{ data.quote.message }}<br>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
