{% extends 'AppBundle:Email:base.html.twig' %}

{% block body %}
    <table width="100%" border="0" cellpadding="0"
           cellspacing="0">
        <tbody>
        <tr>
            <td class="mpad_lr" style="padding:30px 40px 20px 40px;">
                <h2>{{ data.user.username }}</h2>
            </td>
        </tr>
        <tr>
            <td class="mpad_lr" style="padding:0px 40px 30px 40px;">
                <p>{% trans %}Your account has been created{% endtrans %}.</p>
                <p>{% trans %}You can always login{% endtrans %} <a href="{{ get_env("SSL") }}://{{ get_env("BACKEND_URL") }}{{ get_env("FRONTEND_URL_PORT") }}/login">{% trans %}here{% endtrans %}</a></p>
                <p>{% trans %}Your info{% endtrans %}:</p>
                <ul>
                    <li>{% trans %}Username{% endtrans %}: {{ data.user.username }}</li>
                    <li>{% trans %}Password{% endtrans %}: {{ data.password }}</li>
                </ul>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}