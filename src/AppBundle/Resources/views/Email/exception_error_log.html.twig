                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}