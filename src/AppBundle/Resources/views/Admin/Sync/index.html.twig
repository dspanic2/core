{% extends 'base.html.twig' %}

{% block header %}
    {% block main_actions %}

    {% endblock %}
    {% block main_title %}
        Synchronization tool
    {% endblock %}
{% endblock %}

{% block body %}
    <div id="page-content">
        <div id='wrap'>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="panel panel-midnightblue">
                            <div class="panel-heading master-panel-heading">
                            </div>
                            <div class="panel-body collapse in">
                                <form>
                                    <fieldset class="form-group-wrapper">
                                        <div class="form-group row">
                                            <label class="col-sm-4 control-label">{% trans %}Compare type{% endtrans %}</label>
                                            <div class="col-sm-6">
                                                <select name="compare_type" class="form-control" data-fv-notempty="true"
                                                        data-fv-notempty-message="{% trans %}Please select{% endtrans %}">
                                                    <option value="entity_type">1. Entity types</option>
                                                    <option value="attribute_set">2. Attribute sets</option>
                                                    <option value="attribute">3. Attributes</option>
                                                    <option value="attribute_group">4. Attribute group</option>
                                                    <option value="list_view">5. List views</option>
                                                    <option value="page_block">6. Page blocks</option>
                                                    <option value="page">7. Pages</option>
                                                    <option value="navigation_link">8. Navigation links</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 control-label">{% trans %}Remote URL{% endtrans %}</label>
                                            <div class="col-sm-6">
                                                <input type="text"
                                                       name="remote_url" class="form-control" data-fv-notempty="true"
                                                       data-fv-notempty-message="{% trans %}Please fill in{% endtrans %}"
                                                       placeholder="https://dev.mensiscrm.madev.eu" value="http://dev.alterracrm.madev.eu"/>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-4 control-label">{% trans %}Show changes only{% endtrans %}</label>
                                            <div class="col-sm-6">
                                                <input type="checkbox" checked="checked" name="showChangesOnly" data-type="bchackbox"
                                                       data-on-text="{% trans %}Yes{% endtrans %}" value="1"
                                                       data-off-text="{% trans %}No{% endtrans %}"
                                                />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="row">
                                        <div class="col-sm-6 col-xs-12">
                                            <button class="sp-btn sync_compare btn" type="button"
                                                    data-url="{{ path('administrator_compare') }}">{% trans %}Compare{% endtrans %}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <div class="compare_results_container">

                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-7 col-sm-offset-2">
                            <div class="btn-toolbar">
                                <div>
                                    <button type="button" class="btn-primary btn btn-blue run_sync"
                                            data-url="{{ path('admin_sync') }}">Sync
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- container -->
        </div> <!--wrap -->
    </div> <!-- page-content -->
{% endblock %}
