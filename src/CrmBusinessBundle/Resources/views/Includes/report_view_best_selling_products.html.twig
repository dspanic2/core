<fieldset class="form-group-wrapper sp-table-mark sp-remove-zero sp-move-arrows">
    <p>{% trans %}List of top 100 best selling products{% endtrans %}</p>
    <table class="sp_report_view_table table">
        <thead>
        <tr>
            <th class="sp-center">{% trans %}No.{% endtrans %}</th>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Code{% endtrans %}</th>
            <th class="sp-center">{% trans %}Qty{% endtrans %}</th>
            <th class="sp-center">{% trans %}Amount{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in data.items %}
            <tr>
                <td class="sp-center sp_bold">
                    {{ loop.index }}
                </td>
                <td>{{ item.name }}</td>
                <td>{{ item.code }}</td>
                <td class="sp-center">{{ item.qty|number_format(0, ',', '.') }}</td>
                <td class="sp-center">{{ item.amount|number_format(2, ',', '.') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</fieldset>
