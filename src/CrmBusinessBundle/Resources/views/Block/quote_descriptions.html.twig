<div class="sp-block sp-quote-descriptions-wrapper">
    <div class="panel panel-midnightblue">
        <div class="panel-heading main-panel-heading">
            <div class="options">
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('AppBundle:Includes:manage_block_buttons.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="sp-block-inner">
        <div class="panel panel-midnightblue">
            <div class="panel-heading main-panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#itemdescriptions" data-toggle="tab">{% trans %}Item
                            descriptions{% endtrans %}</a></li>
                    <li><a href="#preview" data-toggle="tab">{% trans %}Preview{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="itemdescriptions">
                        <div id="description-wrap-html_before_items"></div>
                        <hr>
                        <div id="descriptions-dynamic"></div>
                        <hr>
                        <div id="description-wrap-html_after_items"></div>
                    </div>
                    <div class="tab-pane fade" id="preview">
                        <div id="quotepreview"></div>
                        <button type="button"
                                class="sp-btn btn-primary btn-blue btn"
                                data-action="download"
                                data-url="/">
                            {% trans %}Download{% endtrans %}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

