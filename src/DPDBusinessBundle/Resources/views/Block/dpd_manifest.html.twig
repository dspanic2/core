<div class="sp-block {{ data.block.class }}">
    <div class="panel panel-midnightblue">
        <div class="panel-body collapse in">
            <div class="panel-heading">
                <h5>{{ data.block.title|trans }}
                    {% if data.subtype == 'view' or is_granted('ROLE_ADMIN') %}
                        <div class="options">
                            {% if is_granted('ROLE_ADMIN') %}
                                {{ include('AppBundle:Includes:manage_block_buttons.html.twig') }}
                            {% endif %}
                        </div>
                    {% endif %}
                </h5>
            </div>
            <form data-validate="true">
                <div class="form-group-wrapper">
                    <div class="form-group row ">
                        <label class="col-sm-4 col-xs-4 control-label">
                            Date
                        </label>

                        <div class="col-sm-8 col-xs-8">
                            <input data-type="datesingle" type="text" data-action="date" class="form-control" name="date_start">
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-sm-4 col-xs-4 control-label">
                            Type
                        </label>

                        <div class="col-sm-8 col-xs-8">
{#                            <select data-template="default"#}
{#                                    data-type="lookup"#}
{#                                    data-search-url="/dpd_parcel/get_parcel_type_autocomplete"#}
{#                                    class="form-control"#}
{#                                    data-min-len="0"#}
{#                                    data-single="true"#}
{#                                    name="notification_type"#}
{#                                    data-allow-clear="true"#}
{#                                    data-placeholder="{% trans %}Search...{% endtrans %}">#}
{#                            </select>#}

                            <select data-template="default" name="manifest_code">
                                <option value="0" selected>{% trans %}Search...{% endtrans %}</option>
                                <option value="manifest">{% trans %}Manifest{% endtrans %}</option>
                                <option value="manifest_cod">{% trans %}COD manifest{% endtrans %}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row ">
                            <button type="submit" class="apply-show-all sp-btn btn-secondary btn-blue btn" data-action="print_dpd_manifest" data-url="{{ path('print_dpd_manifest') }}">{% trans %}Download manifest{% endtrans %}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>
