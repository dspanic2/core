{% extends 'ScommerceBusinessBundle:Email:base.html.twig' %}

{% block header %}{% include 'ScommerceBusinessBundle:Email/Components:header_image.html.twig' %}{% endblock %}

{% block body %}
    <table width="100%" border="0" cellpadding="0"
           cellspacing="0">
        <tbody>
        <tr>
            <td valign="top" align="left">
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left"
                            style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            {% trans into data.current_language %}Dear Sir/Madam{% endtrans %},<br>
                            <br>
                            {% trans into data.current_language %}thank you for your interest{% endtrans %}.<br>
                            {% trans into data.current_language %}Your request has been successfully received{% endtrans %}.&nbsp;<br>
                            <br>
                            <br>
                            {% trans into data.current_language %}Date{% endtrans %}: {{ "now"|date("d.m.Y.") }}
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:16px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td align="left" valign="top" width="400" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;">
                                            <div>
                                                <strong>{% trans into data.current_language %}User information{% endtrans %}:</strong><br><br>
                                                {{ data.quote.first_name }} {{ data.quote.last_name }}<br>
                                                <strong>{% trans into data.current_language %}E-mail{% endtrans %}</strong>: {{ data.quote.email }}<br>
                                                <strong>{% trans into data.current_language %}Phone{% endtrans %}</strong>: {{ data.quote.phone }}<br>
                                            </div>
                                        </td>
                                        <td align="left" valign="top" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;">
                                            <div>
                                                {% if data.product is not empty %}
                                                    <strong>{% trans into data.current_language %}Product information{% endtrans %}:</strong><br><br>
                                                    <strong>{% trans into data.current_language %}Name{% endtrans %}</strong>: {{ get_entity_store_attribute(current_store_id,data.product,"name") }}<br>
                                                    <strong>{% trans into data.current_language %}Code{% endtrans %}</strong>: {{ data.product.code }}<br>
                                                    <br>
                                                    <br>
                                                {% endif %}
                                                <strong>{% trans into data.current_language %}Inquiry{% endtrans %}:</strong><br><br>
                                                {{ data.quote.message }}<br>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
