{% extends 'ScommerceBusinessBundle:Email:base.html.twig' %}

{% block header %}{% include 'ScommerceBusinessBundle:Email/Components:header_image.html.twig' %}{% endblock %}

{% block body %}
    <table width="100%" border="0" cellpadding="0"
           cellspacing="0">
        <tbody>
        <tr>
            <td valign="top" align="left">
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            {% trans into data.current_language %}Dear Sir/Madam{% endtrans %},<br>
                            <br>
                            <strong style="text-align: center; font-size:15px;">{% trans into data.current_language %}Your order was received{% endtrans %}.</strong><br><br>
                            {% trans into data.current_language %}Thank you for your trust{% endtrans %}!<br>
                            <br>
                            <br>
                            <strong>{% trans into data.current_language %}Order number{% endtrans %}: {{ data.order.incrementId }}</strong><br><br>
                            {% trans into data.current_language %}Order date{% endtrans %}: {{ data.order.created|date("d.m.Y.") }}
                            <br>
                            <br>
                            {% if get_env("GLS_CLIENT_NUMBER")|length %}
                                {% trans into data.current_language %}You will be informed about the status of your order and delivery by e-mail and SMS to GLS{% endtrans %}.
                            {% else %}
                                {% trans into data.current_language %}You will be notified by e-mail about the status of your order and delivery{% endtrans %}.
                            {% endif %}

                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:16px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td align="left" valign="top" width="400" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;">
                                            <div>
                                                {{ include ('ScommerceBusinessBundle:Email/Components:company_information.html.twig', {'data':data}) }}
                                                {#{{ render(controller('ScommerceBusinessBundle:Template:twigIncludeTwig', {'template':'Email/Components:company_information.html.twig', 'data': {'data':data}}, {})) }}#}
                                            </div>
                                        </td>
                                        <td align="left" valign="top" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;">
                                            <div>
                                                <strong>{% trans into data.current_language %}User information{% endtrans %}:</strong>
                                                <br>
                                                <br>
                                                {{ data.order.account.name }}<br>
                                                {{ data.order.accountBillingAddress.street }}<br>
                                                {{ data.order.accountBillingCity.postalCode }} {{ data.order.accountBillingCity.name }}, {{ get_entity_store_attribute(data.current_store_id,data.order.accountBillingCity.country,"name") }}<br>
                                                {% if data.order.account.phone is not empty %}{{ data.order.account.phone }}<br>{% endif %}
                                                {% if data.order.account.isLegalEntity %}OIB: {{ data.order.account.oib }}<br>{% endif %}
                                                {% if data.order.account.email is not empty %}{{ data.order.account.email }}<br>{% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left"
                            style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            <table width="100%" border="0" cellpadding="2" cellspacing="0">
                                <thead>
                                    <tr style="background-color:#f3f3f3; font-weight:bold; border-bottom:#999 1px solid;">
                                        <th align="left" width="80" valign="center">{% trans into data.current_language %}Product code{% endtrans %}</th>
                                        <th align="left" width="340" valign="center">{% trans into data.current_language %}Product{% endtrans %}</th>
                                        <th align="center" width="80" valign="center">{% trans into data.current_language %}Price per unit{% endtrans %}</th>
                                        <th align="center" width="50" valign="center">{% trans into data.current_language %}Amount{% endtrans %}</th>
                                        <th align="right" width="100" valign="center">{% trans into data.current_language %}Total{% endtrans %}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in data.order.getOrderItems() %}
                                        <tr>
                                            <td style="border-bottom:#CCC 1px solid" align="left" width="80" valign="center">{{ item.product.code }}</td>
                                            <td style="border-bottom:#CCC 1px solid" align="left" width="340" valign="center">{{ get_entity_store_attribute(data.current_store_id,item.product,"name") }}</td>
                                            <td style="border-bottom:#CCC 1px solid" align="right" width="80" valign="center">{{ item.priceItem|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                            <td style="border-bottom:#CCC 1px solid" align="center" width="50" valign="center">{{ prepare_qty(item.getQty,item.product.getQtyStep) }}</td>
                                            <td style="border-bottom:#CCC 1px solid" align="right" width="80" valign="center">{{ item.priceTotal|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                        </tr>
                                    {% endfor %}
                                    <tr>
                                        <td colspan="5">&nbsp;</td>
                                    </tr>

                                    {# TOTALS #}
                                    <tr style="padding: 20px 0 5px">
                                        <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Subtotal without tax{% endtrans %}:
                                        </td>
                                        <td colspan="3" align="right" style="font-weight:700;">{{ data.order.getPriceItemsWithoutTax|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                    </tr>
                                    {% if data.order.deliveryType.isDelivery == 1 %}
                                        <tr style="padding: 5px 0">
                                            <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Delivery without tax{% endtrans %}:
                                            </td>
                                            <td colspan="3" align="right"
                                                style="font-weight:700;">{{ data.order.getPriceDeliveryWithoutTax|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                        </tr>
                                    {% endif %}
                                    <tr style="padding: 5px 0">
                                        <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Total tax{% endtrans %}:</td>
                                        <td colspan="3" align="right" style="font-weight:700;">{{ data.order.getPriceTax|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                    </tr>
                                    <tr style="padding: 5px 0">
                                        <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Subtotal with tax{% endtrans %}:</td>
                                        <td colspan="3" align="right"
                                            style="font-weight:700;">{{ (data.order.getPriceItemsTotal + data.order.getPriceDeliveryTotal)|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                    </tr>
                                    {% if get_env("SHOW_DISCOUNTS_AS_SUM") == 1 %}
                                        {% set discountAmount = 0 %}
                                        {% if data.order.discountCoupon is not empty %}
                                            {% set discountAmount = discountAmount + data.order.getDiscountCouponPriceTotal %}
                                        {% endif %}
                                        {% if data.order.getLoyaltyCard is not empty %}
                                            {% set discountAmount = discountAmount + data.order.getDiscountLoyaltyPriceTotal %}
                                        {% endif %}
                                        {% if discountAmount > 0 %}
                                            <tr style="padding: 5px 0">
                                                <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Discount{% endtrans %}:</td>
                                                <td colspan="3" align="right"
                                                    style="font-weight:700;">-{{ discountAmount|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                            </tr>
                                        {% endif %}
                                    {% else %}
                                        {% if data.order.discountCoupon is not empty and data.order.getDiscountCouponPriceTotal > 0 %}
                                            <tr style="padding: 5px 0">
                                                <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Coupon{% endtrans %}:</td>
                                                <td colspan="3" align="right" style="font-weight:700;">{{ data.order.getDiscountCouponPriceTotal|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                            </tr>
                                        {% endif %}
                                        {% if data.order.getLoyaltyCard is not empty and data.order.getDiscountLoyaltyPriceTotal > 0 %}
                                            <tr style="padding: 5px 0">
                                                <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Loyalty{% endtrans %}:</td>
                                                <td colspan="3" align="right" style="font-weight:700;">{{ data.order.getDiscountLoyaltyPriceTotal|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                            </tr>
                                        {% endif %}
                                    {% endif %}
                                    {% if data.order.paymentFee is defined and data.order.paymentFee > 0 %}
                                        <tr style="padding: 5px 0">
                                            <td colspan="3" align="right" style="color: #a4a4a4;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Handeling costs{% endtrans %}:</td>
                                            <td colspan="3" align="right" style="font-weight:700;">{{ data.model.quote.priceFee|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                        </tr>
                                    {% endif %}
                                    <tr>
                                        <td colspan="3" align="right"
                                            style="color: #000000;text-transform:uppercase;font-size: 12px;font-weight: 600;">{% trans into data.current_language %}Total{% endtrans %}:
                                        </td>
                                        <td colspan="3" align="right"
                                            style="font-weight:600; color: #69a220;font-size: 16px;">{{ data.order.getPriceTotal|number_format(2, ',', '.') }} {{ data.order.currency.sign }}</td>
                                    </tr>
                                    {# END TOTALS #}

                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            <table>
                                <tbody>

                                    <tr>
                                        <td align="left" valign="top" width="400">
                                            <strong>{% trans into data.current_language %}Payment type{% endtrans %}:</strong> {{ get_entity_store_attribute(data.current_store_id,data.order.paymentType,"name") }}<br><br>
                                        </td>
                                        <td align="left" valign="top">
                                            <strong>{% trans into data.current_language %}Delivery type{% endtrans %}:</strong> {{ get_entity_store_attribute(data.current_store_id,data.order.deliveryType,"name") }}<br><br>
                                            {% if data.order.deliveryType.isDelivery == 1 %}
                                                <strong>{% trans into data.current_language %}Delivery address{% endtrans %}:</strong><br>
                                                {{ data.order.accountShippingStreet }}, {{ data.order.accountShippingCity.postalCode }} {{ data.order.accountShippingCity.name }}, {{ get_entity_store_attribute(data.current_store_id,data.order.accountShippingCity.country,"name") }}<br>
                                                {% if data.order.accountShippingAddress.firstName is not empty %}
                                                    {% trans into data.current_language %}Contact person{% endtrans %}: {{ data.order.accountShippingAddress.firstName }} {{ data.order.accountShippingAddress.lastName }}
                                                {% endif %}
                                                {% if data.order.accountShippingAddress.phone is not empty %}
                                                    {% trans into data.current_language %}Contact phone{% endtrans %}: {{ data.order.accountShippingAddress.phone }}
                                                {% endif %}
                                            {% else %}
                                                {% trans into data.current_language %}We will notify you when the items are ready to be picked up{% endtrans %}.
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% if data.order.paymentType.id == 4 %}
                                        {% if data.order.accountBillingCity.country.id == 1 %}
                                            <tr>
                                                <td align="left" valign="top" colspan="2">
                                                    <br><strong style="text-align: left; font-size:23px;">{% trans into data.current_language %}Vaša narudžba je zaprimljena{% endtrans %}</strong><br>
                                                    {% trans into data.current_language %}Skenirajte kod za uplatu putem e-banking mobilne aplikacije ili upišite sljedeće podatke na uplatnicu{% endtrans %}:<br><br>
                                                    <img align="center" src="{{ base_url }}{{ generate_money_transfer_payment_slip(data.order) }}"
                                                         border="0"
                                                         style="display:block;max-width: 100%;height:auto;margin-left: auto;margin-right: auto;">
                                                    <div align="left">
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}Primatelj{% endtrans %}:</strong> {{ data.site_base_data.site_base_companyName }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}Adresa{% endtrans %}:</strong> {{ data.site_base_data.site_base_streetAddress }}, {{ data.site_base_data.site_base_postalCode }} {{ data.site_base_data.site_base_addressLocality }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}IBAN{% endtrans %}:</strong> {{ data.money_transfer_payment_slip.recipient_iban_or_account }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}OIB{% endtrans %}:</strong> {{ data.money_transfer_payment_slip.recipient_oib }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}Model{% endtrans %}:</strong>  {{ data.money_transfer_payment_slip.recipient_account_model }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}Poziv na broj{% endtrans %}:</strong>  {{ data.order.incrementId }}<br>
                                                        <strong style="text-transform: uppercase">{% trans into data.current_language %}Iznos za uplatu{% endtrans %}:</strong> {{ data.order.getPriceTotal|number_format(2, ',', '.') }} {{ data.order.currency.sign }}<br><br>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td align="center" valign="top" colspan="2">
                                                    {% trans into data.current_language %}You can pay the specified amount at{% endtrans %}:<br><br>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endif %}
                                    {% if data.order.message is not empty %}
                                        <tr>
                                            <td colspan="2" align="left" valign="top">
                                                <strong>{% trans into data.current_language %}Note{% endtrans %}:</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" align="left" valign="top" style="color: #7f0000;">
                                                {{ data.order.message }}
                                            </td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
