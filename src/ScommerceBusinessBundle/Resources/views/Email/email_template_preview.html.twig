{% extends 'ScommerceBusinessBundle:Email:base.html.twig' %}

{% block header %}{% include 'ScommerceBusinessBundle:Email/Components:header.html.twig' %}{% endblock %}

{% block body %}
    <table width="100%" border="0" cellpadding="0"
           cellspacing="0">
        <tbody>
        <tr>
            <td valign="top" align="left">
                <table width="100%" border="0"
                       cellpadding="0"
                       cellspacing="0">
                    <tbody>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    <tr>
                        <td align="left" style="font-family:'Open Sans',sans-serif;font-size:14px;color:#4e515a;line-height:normal;font-weight:400;padding:0px 30px">
                            {% if content is defined and content is not empty %}
                                {{ content|raw }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td width="1"
                            style="line-height:30px">
                            <img src="{{ base_url }}{{ mails_img }}/proziran_png.png"
                                 width="1" alt=" "
                                 height="30"
                                 border="0"
                                 style="display:block"
                                 class="transparent_img">
                        </td>
                    </tr>
                    </tbody>
                </table>

                {{ content_secondary|default("")|raw }}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
