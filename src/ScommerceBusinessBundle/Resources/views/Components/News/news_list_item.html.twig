<a href="{{ blog.getUrlPath(current_store_id) }}" class="blog-item">
    {% set title = get_entity_store_attribute(current_store_id,blog,"name") %}
    <div class="image">
        {% if blog.getSelectedImage() is not empty %}
            {% set image_url = "/Documents/blog_post_image/"  ~ blog.getSelectedImage().file %}
            {% set image_style_url = image_url|image_style('blog_item') %}
            {% if image_style_url %}
                {% set image_url = image_style_url %}
            {% endif %}
        {% else %}
            {% set image_url = "/frontend/images/category-placeholder.jpg" %}
        {% endif %}
        <img src="{{ image_url }}"
             alt="{% if blog.getSelectedImage.alt is defined and blog.getSelectedImage.alt is not empty %}{{ blog.getSelectedImage.alt }}{% else %}{{ title }}{% endif %}"
             title="{% if blog.getSelectedImage.alt is defined and blog.getSelectedImage.alt is not empty %}{{ blog.getSelectedImage.alt }}{% else %}{{ title }}{% endif %}">
    </div>
    <div class="info">
        <h2>{{ title }}</h2>
        <span class="date">{{ blog.created|date('d.m.Y') }}</span>
    </div>
</a>