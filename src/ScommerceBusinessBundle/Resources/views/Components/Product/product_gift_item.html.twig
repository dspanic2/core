{% if product is defined and product is not empty %}
    {% set product_name = get_entity_store_attribute(current_store_id,product,"name") %}
    {% set product_url = get_entity_store_attribute(current_store_id,product,"url") %}
    <div class="product-display-grid product-gift-item item {% if product.id in gift.used_gift_ids %}selected{% endif %}" data-product-id="{{ product.id }}">
        <span class="gift-select local-overlay-toggle"><span class="icon"><i class="fi-xwsuxl-check"></i></span></span>
        <div class="image-info">
            <span class="product-display-grid-image">
                {{ render(controller('ScommerceBusinessBundle:Template:twigIncludeTwig', {'template':'Components/Utilities:image.html.twig', 'data': {'image': product.getSelectedImage(), 'directory':'Products','image_style': 'product_list_item' ,'alt_default': product_name}}, {})) }}
            </span>
        </div>

        <div class="info">
            <div class="product-brand">
                {% set brandName = get_product_attribute_value_by_key(product,"brand") %}
                {% if brandName %}
                    {% set brandName = brandName.values[0].value %}
                    <span class="brand">{{ brandName }}</span>
                {% endif %}
            </div>

            <div class="product-title"><span>{{ product_name }}</span></div>
        </div>
    </div>
{% endif %}