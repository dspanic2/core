{% set page_size = 0 %}
{% for option in page_size_options %}
    {% if option.value is defined and option.selected %}
        {% set page_size = option.value %}
    {% endif %}
{% endfor %}
{% if page_size is not empty and total > page_size and page_size > 0 %}
    {% apply spaceless %}
        <ul class="category-list-pager">
            {% for i in 1..(total/page_size)|round(0, 'ceil') %}
                <li class="local-overlay-toggle page page-{{ i }} {% if i == page_number %}activated{% endif %}" data-page-number="{{ i }}">{{ i }}</li>
            {% endfor %}
        </ul>
    {% endapply %}
{% endif %}