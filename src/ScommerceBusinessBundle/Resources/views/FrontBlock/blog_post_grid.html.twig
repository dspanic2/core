<div class="sp-block-outer sp-block-outer-{{ data.block.type }} blog-grid ajax {{ data.block.class }}" {% if data.page.templateType.code == "blog_category" %}data-category-id="{{ data.page.id }}"{% endif %} {{ data.block.dataAttributes }}>
    <div class="content">

        {% if data.model.subtitle is defined and data.model.subtitle is not empty %}
            <div class="row">
                <div class="col-xs-12">
                    <div class="section-title">{{ data.model.subtitle }}</div>
                </div>
            </div>
        {% else %}
            <h1>{{ get_entity_store_attribute(current_store_id,data.page,"name") }}</h1>
        {% endif %}

        <div class="blog-grid-content"></div>
        <div class="text-center">
            <div class="section items-pager"></div>
        </div>
    </div>
</div>
